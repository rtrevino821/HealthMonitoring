<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.healthmonitoring.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/home_button_group">

        <Button
            android:id="@+id/btn_hr_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:elevation="4dp"
            android:text="@string/hr_history"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:textAllCaps="false"
            android:theme="@style/MyButton"/>

        <Button
            android:id="@+id/btn_view_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_hr_history"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:elevation="4dp"
            android:text="@string/view_profile"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:textAllCaps="false"
            android:theme="@style/MyButton" />

        <Button
            android:id="@+id/btn_check_my_pulse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_view_profile"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:elevation="4dp"
            android:text="@string/check_my_pulse"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:textAllCaps="false"
            android:theme="@style/MyButton" />

        <Button
            android:id="@+id/btn_contact_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_check_my_pulse"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:elevation="4dp"
            android:text="@string/contact_doctor"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:textAllCaps="false"
            android:theme="@style/MyButton" />

    </LinearLayout>

</RelativeLayout>
