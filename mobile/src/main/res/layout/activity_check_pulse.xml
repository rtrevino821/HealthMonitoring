<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_check_pulse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.example.healthmonitoring.CheckPulseActivity"
    android:elevation="4dp">

    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        app:rb_color="@color/colorAccent"
        app:rb_radius="20dp"
        app:rb_rippleAmount="4"
        app:rb_duration="2000"
        app:rb_scale="6">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pulse"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:layout_above="@+id/tv_Heart_Rate"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_pulse" />
    </com.skyfishjy.library.RippleBackground>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_Heart_Rate"
        android:text="0"
        android:textSize="108dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bpm"
        android:layout_below="@+id/tv_Heart_Rate"
        android:text="BPM"
        android:textSize="20dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stepGroup"
        android:layout_below="@id/tv_bpm"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/stepCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_bpm"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:text="Step Count:"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/stepCountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_bpm"
        android:layout_toRightOf="@id/stepCount"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:text="0"
        android:textColor="@color/colorAccentPink"
        android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_check_my_pulse"
        android:text="Check Activity Level"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/stepGroup"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_check_my_pulse_stop"
        android:text="@string/stop"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_bpm"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:visibility="gone"/>

</RelativeLayout>
