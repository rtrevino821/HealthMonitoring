<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.healthmonitoring.MainActivity"
    tools:deviceIds="wear_round"
    android:background="@color/black">

    <ImageView
        android:id="@+id/heartImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/watchface"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnPause" />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="click me"
        />

    <LinearLayout
        android:id="@id/stepLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stepCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button1"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/stepCountTV"
            android:fontFamily="sans-serif"
            android:text="Steps: "
            android:textColor="@color/colorAccentPink"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/stepCountResultsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button1"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="0000"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/heartRateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stepLayout"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-thin"
        android:paddingTop="5dp"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="40dp" />


    <TextView
        android:id="@+id/bpmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heartRateText"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"
        android:text="Pulse"
        android:textColor="@color/colorAccentPink"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/btnPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pause_white_24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bpmText"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:background="@color/colorPrimaryDark"/>


    <ImageButton
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_arrow_white_24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bpmText"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/activityLevelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bpmText"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:paddingTop="10dp"
        android:text="Activity Level: "
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/activityLevelResultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityLevelTV"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="Average"
        android:textColor="@color/orange"
        android:textSize="15dp" />




</RelativeLayout>
