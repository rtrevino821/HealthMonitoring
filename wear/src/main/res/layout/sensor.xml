<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/watchface">

    <TextView android:id="@+id/text_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/init_title"
        android:textColor="@color/colorAccentPink" />

    <TextView android:id="@+id/text_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_title"
        android:text="@string/init_values"
        android:textColor="@color/colorAccentPink" />

    <TextView android:id="@+id/bright_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_values"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textColor="@color/colorAccentPink" />
</RelativeLayout>